<script>
  // TikTok Detection Function
  function detectTikTokSource() {
    // Check URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const fragment = window.location.hash;

    // Common TikTok URL parameters
    const tiktokParams = [
      "ref=tiktok",
      "source=tiktok",
      "utm_source=tiktok",
      "from=tiktok",
      "tiktok=1",
    ];

    // Check if any TikTok parameter exists
    for (const param of tiktokParams) {
      const [key, value] = param.split("=");
      if (urlParams.get(key) === value) {
        return true;
      }
    }

    // Check referrer header
    const referrer = document.referrer.toLowerCase();
    const tiktokDomains = [
      "tiktok.com",
      "vm.tiktok.com",
      "vt.tiktok.com",
      "m.tiktok.com",
      "www.tiktok.com",
    ];

    for (const domain of tiktokDomains) {
      if (referrer.includes(domain)) {
        return true;
      }
    }

    // Check User Agent for TikTok in-app browser
    const userAgent = navigator.userAgent.toLowerCase();
    const tiktokUserAgents = ["tiktok", "musically", "aweme"];

    for (const agent of tiktokUserAgents) {
      if (userAgent.includes(agent)) {
        return true;
      }
    }

    // Check localStorage for previous TikTok detection
    const previouslyFromTikTok = localStorage.getItem("fromTikTok");
    if (previouslyFromTikTok === "true") {
      return true;
    }

    return false;
  }

  // Initialize the page based on source detection
  function initializePage() {
    const isFromTikTok = detectTikTokSource();

    // Show appropriate content
    const tiktokContent = document.getElementById("tiktok-content");
    const defaultContent = document.getElementById("default-content");

    if (!tiktokContent || !defaultContent) {
      console.error("Required elements not found");
      return;
    }

    if (isFromTikTok) {
      // Show TikTok content but disable the button
      tiktokContent.style.display = "flex";
      defaultContent.style.display = "none";

      // Disable and gray out the TikTok button
      const tiktokButton = document.getElementById("tiktok-whatsapp-btn");
      if (tiktokButton) {
        tiktokButton.style.backgroundColor = "#6b7280"; // gray-500
        tiktokButton.style.cursor = "not-allowed";
        tiktokButton.style.pointerEvents = "none";
        tiktokButton.classList.remove(
          "hover:bg-green-500",
          "hover:-translate-y-1",
          "hover:shadow-xl"
        );
        tiktokButton.innerHTML = `
