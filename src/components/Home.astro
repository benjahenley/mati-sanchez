  // Run detection when page loads
  document.addEventListener("DOMContentLoaded", initializePage);

  // Also run immediately in case DOMContentLoaded already fired
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initializePage);
  } else {
    initializePage();
  }
</script>
