<div class="min-h-screen bg-gray-50 font-[Poppins]">
  <!-- Header Section -->
  <header class="px-4 py-8 text-start max-w-4xl mx-auto">
    <h1 class="text-black text-xl md:text-2xl font-bold leading-normal m-0">
      <span class="text-blue-600 font-extrabold">ATENCIÓN:</span> SEGUÍ ESTOS PASOS
      SI VENIS DE TIKTOK
    </h1>
  </header>

  <!-- Steps Section -->
  <main
    class="px-4 py-8 max-w-4xl mx-auto flex flex-row items-start justify-center gap-4"
  >
    <!-- Step 1 -->
    <section class="h-[500px] flex flex-col justify-between">
      <div class="">
        <h2 class="text-blue-600 text-xl md:text-3xl font-bold mb-6">
          PASO 1:
        </h2>
        <p class="text-sm text-gray-800 mb-4 font-medium">
          Tocá los 3 botones de arriba a la derecha como se ve en la captura.
        </p>
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 justify-items-center"
      >
        <div class="w-full">
          <!-- Placeholder for phone image 1 -->
          <img
            src="/celu.png"
            alt="Step 1"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </section>

    <!-- Step 2 -->
    <section class="h-[500px] flex flex-col justify-between">
      <div class="">
        <h2 class="text-blue-600 text-xl md:text-3xl font-bold mb-6">
          PASO 2:
        </h2>
        <p class="text-sm text-gray-800 mb-4 font-medium">
          Tocá "Abrir en el navegador" cuando se ve en la captura.
        </p>
      </div>
      <div>
        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 justify-items-center"
        >
          <div class="w-full">
            <!-- Placeholder for phone image 2 -->
            <img
              src="/celu.png"
              alt="Step 1"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Step 3 - WhatsApp Button -->
  <footer class="px-4 py-8 text-center h-[170px]">
    <div class="mb-6">
      <h2 class="text-blue-600 text-xl md:text-3xl font-bold m-0">PASO 3:</h2>
    </div>

    <a
      href="https://wa.me/YOUR_PHONE_NUMBER"
      class="inline-flex items-center gap-3 text-white no-underline px-6 py-6 md:px-8 md:py-4 text-base md:text-lg font-semibold transition-all duration-300 hover:-translate-y-1 hover:shadow-xl bg-green-500 rounded-lg"
      target="_blank"
    >
